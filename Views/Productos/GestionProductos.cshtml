@model IEnumerable<MyPymeStore.Models.Producto>
@using MyPymeStore.Models

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Gestión de Productos</h2>
    <a class="btn btn-primary" href="/Productos/Create">Agregar Producto</a>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Impuesto</th>
            <th>Stock</th>
            <th>Categoría</th>
            <th>Imagen</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Precio.ToString("C")</td>
                <td>@item.ImpuestosPorCompra.ToString("C")</td>
                <td>@item.Stock</td>
                <td>@item.Categoria?.Nombre</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagenUrl))
                    {
                        <img src="@item.ImagenUrl" alt="@item.Nombre" width="50" />
                    }
                </td>
                <td>
                    <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal-@item.Id">Editar</button>
                    <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">Eliminar</button>
                </td>
            </tr>

            <!-- Modal Editar -->
            <div class="modal fade" id="editModal-@item.Id" tabindex="-1" aria-labelledby="editModalLabel-@item.Id" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form asp-action="Edit" method="post">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editModalLabel-@item.Id">Editar Producto</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                            </div>
                            <div class="modal-body">
                                <input type="hidden" name="Id" value="@item.Id" />

                                <div class="mb-3">
                                    <label>Nombre</label>
                                    <input type="text" name="Nombre" value="@item.Nombre" class="form-control" required />
                                </div>

                                <div class="mb-3">
                                    <label>Precio</label>
                                    <input type="number" name="Precio" value="@item.Precio" class="form-control" step="0.01" required />
                                </div>

                                <div class="mb-3">
                                    <label>Impuesto (%)</label>
                                    <input type="number" name="ImpuestosPorCompra" value="@item.ImpuestosPorCompra" class="form-control" step="0.01" required />
                                </div>

                                <div class="mb-3">
                                    <label>Stock</label>
                                    <input type="number" name="Stock" value="@item.Stock" class="form-control" required />
                                </div>

                                <div class="mb-3">
                                    <label>Categoría</label>
                                    <select name="CategoriaId" class="form-control" required>
                                        @foreach (var c in ViewBag.Categorias as List<Categoria>)
                                        {
                                            if (c.Id == item.CategoriaId)
                                            {
                                                <option value="@c.Id" selected>@c.Nombre</option>
                                            }
                                            else
                                            {
                                                <option value="@c.Id">@c.Nombre</option>
                                            }
                                        }
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label>Imagen URL</label>
                                    <input type="text" name="ImagenUrl" value="@item.ImagenUrl" class="form-control" />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-primary">Guardar cambios</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Modal Eliminar -->
            <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@item.Id" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form asp-action="DeleteConfirmed" method="post">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel-@item.Id">Eliminar Producto</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                            </div>
                            <div class="modal-body">
                                <input type="hidden" name="id" value="@item.Id" />
                                <p>¿Estás seguro que deseas eliminar el producto <strong>@item.Nombre</strong>?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
